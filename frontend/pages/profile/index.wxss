.user-card {
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
}

.info {
  flex: 1;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.student-id {
  font-size: 28rpx;
  color: #666;
}

.menu-list {
  width: 100%;
  margin-top: 30rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.arrow {
  color: #999;
}
