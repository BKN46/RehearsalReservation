.header-bar {
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  padding-left: 20rpx;
  border-left: 8rpx solid #333;
}

.menu-grid {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.menu-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  text-align: center;
}

.menu-card:active {
  background-color: #f9f9f9;
}

.icon-box {
  width: 100rpx;
  height: 100rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.icon {
  font-size: 50rpx;
}

.menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
}
