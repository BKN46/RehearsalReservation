<view class="container">
  <view class="header-bar">
    <text class="page-title">器材管理</text>
  </view>

  <view class="equipment-list">
    <view wx:for="{{equipmentList}}" wx:key="_id" class="equipment-card card">
      <view class="equip-info">
        <view class="equip-name">{{ item.name }}</view>
        <view class="equip-status {{item.status !== 'normal' ? 'status-bad' : ''}}">
          {{ item.status === 'normal' ? '状态良好' : '需维修' }}
        </view>
      </view>
      
      <view class="equip-actions">
        <button 
          class="btn-report" 
          size="mini" 
          bindtap="reportIssue"
          data-item="{{item}}"
          disabled="{{item.status !== 'normal'}}"
        >
          {{ item.status === 'normal' ? '报修' : '已报修' }}
        </button>
      </view>
    </view>
  </view>

  <view wx:if="{{equipmentList.length === 0}}" class="empty-state">
    <text>暂无器材信息</text>
  </view>
</view>
