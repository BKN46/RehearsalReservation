.header-bar {
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  padding-left: 20rpx;
  border-left: 8rpx solid #333;
}

.equipment-list {
  padding-bottom: 40rpx;
}

.equipment-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.equip-info {
  flex: 1;
}

.equip-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.equip-status {
  font-size: 24rpx;
  color: #67c23a; /* Green for good */
}

.equip-status.status-bad {
  color: #f56c6c; /* Red for bad */
}

.equip-actions {
  margin-left: 20rpx;
}

.btn-report {
  background-color: #fff;
  color: #333;
  border: 1rpx solid #ccc;
  font-size: 24rpx;
  padding: 0 30rpx;
  line-height: 50rpx;
}

.btn-report[disabled] {
  background-color: #f5f5f5;
  color: #999;
  border-color: #eee;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
