.tabs {
  display: flex;
  background: #fff;
  width: 100%;
  border-bottom: 1rpx solid #eee;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 30rpx;
}

.tab.active {
  color: #1AAD19;
  border-bottom: 4rpx solid #1AAD19;
  font-weight: bold;
}

.content {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.filter-bar {
  background: #fff;
  padding: 15rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.item {
  margin-bottom: 20rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.item-info {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.form-item {
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 10rpx;
}

.form-item text {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.modal-input {
  border: 1rpx solid #ddd;
  padding: 10rpx;
  border-radius: 6rpx;
  margin-bottom: 30rpx;
}

.modal-actions {
  display: flex;
  justify-content: space-around;
}
