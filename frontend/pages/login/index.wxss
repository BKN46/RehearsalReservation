.header {
  margin-bottom: 50rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  color: #666;
}

.input {
  border: 1rpx solid #ddd;
  padding: 15rpx;
  border-radius: 8rpx;
  width: 100%;
  box-sizing: border-box;
}

.btn-primary {
  margin-top: 40rpx;
  width: 100%;
}
