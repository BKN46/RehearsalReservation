<view class="container">
  <view class="header">
    <text class="title">排练室预约系统</text>
  </view>

  <view class="loading" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>

  <view class="register-area card" wx:if="{{showRegisterForm}}">
    <view class="form-title">首次登录请绑定信息</view>
    <view class="form-item">
      <text class="label">姓名</text>
      <input class="input" placeholder="请输入姓名" bindinput="onNameInput" />
    </view>
    <view class="form-item">
      <text class="label">学号</text>
      <input class="input" placeholder="请输入学号" bindinput="onStudentIdInput" />
    </view>
    <view class="form-item">
      <text class="label">手机号</text>
      <input class="input" placeholder="请输入手机号" bindinput="onPhoneInput" />
    </view>
    <button class="btn-primary" bindtap="register">绑定并登录</button>
  </view>
</view>
