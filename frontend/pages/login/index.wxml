<view class="container">
  <view class="login-header">
    <image class="logo" src="/images/logo.png" mode="aspectFit" wx:if="{{hasLogo}}"></image>
    <view class="title">排练室预约系统</view>
    <view class="subtitle">Rehearsal Room Reservation</view>
  </view>

  <view class="form-card card">
    <view class="form-item">
      <text class="label">姓名</text>
      <input class="input" model:value="{{name}}" placeholder="请输入真实姓名" />
    </view>
    <view class="form-item">
      <text class="label">学号</text>
      <input class="input" model:value="{{student_id}}" placeholder="请输入学号" type="number" />
    </view>
    <view class="form-item">
      <text class="label">联系方式</text>
      <input class="input" model:value="{{phone}}" placeholder="请输入手机号/微信号" />
    </view>
    
    <button class="btn-submit" bindtap="handleLogin" loading="{{loading}}">
      {{ isRegistering ? '注册并登录' : '登录' }}
    </button>
  </view>

  <view class="tips">
    <text>首次登录将自动注册</text>
  </view>
</view>
